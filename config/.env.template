# TCG eBay Batch Uploader Environment Variables
# Copy this file to .env and replace placeholder values with your actual credentials
# NEVER commit .env to version control

# Ximilar API Configuration
XIMILAR_API_KEY=your_ximilar_api_key_here
XIMILAR_ENDPOINT=https://api.ximilar.com/collectibles/v2/tcg_id

# Pokemon TCG API Configuration
POKEMON_TCG_API_KEY=your_pokemon_tcg_api_key_here

# OpenAI API Configuration (optional - for title optimization)
OPENAI_API_KEY=your_openai_api_key_here

# eBay API Configuration
EBAY_APP_ID=your_ebay_app_id_here
EBAY_DEV_ID=your_ebay_dev_id_here
EBAY_CERT_ID=your_ebay_cert_id_here
EBAY_USER_TOKEN=your_ebay_user_token_here

# Business Policies (eBay)
PAYMENT_POLICY_NAME=Immediate Payment (BIN)
SHIPPING_POLICY_UNDER_20=Standard Envelope 1oz (Free)
SHIPPING_POLICY_OVER_20=Free Shipping US GA
RETURN_POLICY_NAME=Returns Accepted

# Processing Configuration
MAX_CONCURRENT_GROUPS=15
MAX_CONCURRENT_API_CALLS=25
CACHE_SIZE_GB=10
RETRY_ATTEMPTS=3
CONNECTION_TIMEOUT=45
READ_TIMEOUT=90

# Rate Limiting (seconds between calls)
RATE_LIMIT_XIMILAR=0.1
RATE_LIMIT_POKEMON=0.05
RATE_LIMIT_EBAY=0.15
RATE_LIMIT_OPENAI=0.2
RATE_LIMIT_SCRYFALL=0.1

# Quality Thresholds
CONFIDENCE_THRESHOLD_HIGH=0.95
CONFIDENCE_THRESHOLD_MEDIUM=0.85
CONFIDENCE_THRESHOLD_LOW=0.30

# Pricing Configuration
MARKUP_PERCENTAGE=1.30
MINIMUM_PRICE_FLOOR=1.99

# Caching Configuration
CACHE_TTL_DAYS=30

# Memory Management
MAX_IMAGES_IN_MEMORY=50
GC_THRESHOLD=100

# Database Configuration
DB_USER=your_db_user_here
DB_PASSWORD=your_db_password_here
DB_HOST=your_db_host_here
DB_PORT=5432
DB_NAME=your_db_name_here