# Production Environment Configuration Example
# Copy this file to .env.production and fill in your actual values

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=pokemon_cards
DB_USER=your_production_db_user
DB_PASSWORD=your_secure_production_password

# Application Configuration
SECRET_KEY=your_very_long_random_secret_key_here
FLASK_ENV=production
FLASK_DEBUG=0
LOG_LEVEL=INFO

# Redis Configuration
REDIS_PASSWORD=your_redis_password_here

# API Keys (Production)
XIMILAR_API_KEY=your_production_ximilar_api_key
POKEMON_TCG_API_KEY=your_production_pokemon_tcg_api_key
OPENAI_API_KEY=your_production_openai_api_key

# eBay Configuration (Production)
EBAY_APP_ID=your_production_ebay_app_id
EBAY_DEV_ID=your_production_ebay_dev_id
EBAY_CERT_ID=your_production_ebay_cert_id
EBAY_USER_TOKEN=your_production_ebay_user_token
EBAY_ENVIRONMENT=production

# Security Configuration
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# SSL Configuration (for nginx)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket-name
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# Monitoring Configuration
SENTRY_DSN=your_sentry_dsn_for_error_tracking
PROMETHEUS_ENABLED=true
GRAFANA_API_KEY=your_grafana_api_key